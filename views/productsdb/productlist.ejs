<%- include('../partials/headuserdb') -%>
<%- include('../partials/header2') -%>
<body>
  <!-- <figure>
    <img src="" alt="Logo">
  </figure>  -->
  <p class="buscar-titulo">
  <h1 class="buscar-titulo">LISTADO DE PRODUCTOS</h1>
  <div class="buscar-titulo">
    <form action="/prodb/productlist" method="POST">
        <input type="text" name="name" id="name">
        <button class="boton-buscar asd" type="submit">Buscar un Producto</button>
    </form>
  </p>
    
</div>
  <br>
  <p class="buscar-titulo">
      <a class="btn btn-primary asd" href="/prodb/add">Agregar un Producto</a>
      <a class="btn btn-primary asd" href="/prodb/productlist">Refrescar</a>

  </p>
  <br>
  <ul>
    <% for( let i = 0; i < product.length; i++ ) { %>
      <div class="container  pt-1 ">
        <div class="cardx " >
            <div class="card-left2">
                <figure><img class="card-img-top" src="/img/img-products/<%= product[i].image %>" alt="product image"></figure>
            </div>    
            
            
            <div class="card-content">
              <p>NOMBRE: <%=product[i].name %></p>
              <p >DESCRIPCION: <%= product[i].descripcion%> </p>
              <p>REFERENCIA: <%= product[i].reference %> </p>
              
              <a href="/prodb/detail/<%= product[i].id %>" class="btn btn-primary asd">Ver Detalle</a>
              
              
            </div>
        </div>
      </div>

    
   <% } %>

   

</body>
</html>